/* pages/list/list.wxss */

input {
  text-align: center;
  height: 200rpx;
}

page {
  background: #f6f6f6;
}

.candidate_guide {
  text-decoration: underline;
  color: aqua;
  background-color: blue;
  text-align: center;
  font-size: 40rpx;
}

.candidate_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  float: left;
}

.candidate_list:after {
  content: ' ';
  width: 274rpx;
}

.candidate_list_one {
  text-align: center;
  margin-top: 40rpx;
}

.candidate_list_image {
  width: 274rpx;
  height: 200rpx;
  
}

.candidate_vote{
  position: relative;
  bottom:50rpx;
  color:#000;
  z-index: 99;
  background-color: rgba(255,255,255,60%)
}

.candidate_list_title,.candidate_list_school {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-wrap: nowrap;
  width: 274rpx;
}
